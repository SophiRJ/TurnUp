<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Fecha del día -->
        <TextView
            android:id="@+id/tvFechaTurno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viernes, 15 de Marzo"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="8dp"
            android:drawableTint="@color/breaker_bay"/>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@color/gray_light"/>

        <LinearLayout
            android:id="@+id/containerTurnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp">

            <!-- Ejemplo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="• 09:00 - 13:00 (4 horas)"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 16:00 - 20:00 (4 horas)"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Total horas -->
        <TextView
            android:id="@+id/tvTotalHorasDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total: 8 horas"
            android:textAlignment="textEnd"
            android:textColor="@color/breaker_bay"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>